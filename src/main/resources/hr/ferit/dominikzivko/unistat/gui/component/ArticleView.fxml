<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.layout.*?>
<fx:root fillHeight="false" type="HBox" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <GridPane fx:id="detailsGrid" hgap="10.0" style="-fx-border-color: -fx-color; -fx-border-width: 0 2 2 0;"
              vgap="3.0">
        <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS" minWidth="80.0"/>
            <ColumnConstraints halignment="RIGHT" hgrow="NEVER" minWidth="50.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
        </rowConstraints>
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
    </GridPane>
    <PieChart fx:id="amountBySourceChart" minHeight="250.0" HBox.hgrow="ALWAYS"/>
</fx:root>
