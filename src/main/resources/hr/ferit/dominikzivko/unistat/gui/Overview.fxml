<?xml version="1.0" encoding="UTF-8"?>

<?import hr.ferit.dominikzivko.unistat.gui.component.ChartControlPanel?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="hr.ferit.dominikzivko.unistat.gui.GuiOverview">
    <ScrollPane fitToHeight="true" fitToWidth="true" minViewportHeight="110.0" pannable="true"
                prefViewportHeight="110.0" vbarPolicy="NEVER" vmax="0.0">
        <HBox fx:id="billSummaryBox" styleClass="header" stylesheets="@application.css">
            <VBox minWidth="150.0">
                <Label alignment="CENTER" maxWidth="1.7976931348623157E308" style="-fx-font-size: 14;"
                       text="%overview_availableSubsidy">
                    <padding>
                        <Insets bottom="5.0" left="10.0" right="10.0" top="40.0"/>
                    </padding>
                </Label>
                <Label fx:id="lblAvailableSubsidy" alignment="CENTER" maxWidth="1.7976931348623157E308"
                       styleClass="strong" text="&lt;value&gt;"/>
            </VBox>
            <Separator orientation="VERTICAL" prefHeight="200.0"/>
        </HBox>
    </ScrollPane>
    <ScrollPane fitToWidth="true" pannable="true" VBox.vgrow="ALWAYS">
        <VBox>
            <LineChart fx:id="dailySpendingChart" createSymbols="false" minWidth="500.0"
                       title="%chart_title_dailySpending" animated="false">
                <xAxis>
                    <CategoryAxis side="BOTTOM"/>
                </xAxis>
                <yAxis>
                    <NumberAxis side="LEFT"/>
                </yAxis>
            </LineChart>
            <ChartControlPanel fx:id="dailySpendingChartControlPanel"/>
            <StackedBarChart fx:id="spendingByBillChart" minWidth="500.0" title="%chart_title_spendingByBill"
                             animated="false">
                <xAxis>
                    <CategoryAxis side="BOTTOM"/>
                </xAxis>
                <yAxis>
                    <NumberAxis side="LEFT"/>
                </yAxis>
            </StackedBarChart>
            <ChartControlPanel fx:id="spendingByBillChartControlPanel"/>
            <padding>
                <Insets bottom="10.0"/>
            </padding>
        </VBox>
    </ScrollPane>
</VBox>
